<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">




    <LinearLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bottomroad"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_heart1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/heart">

        </ImageView>
        <ImageView
            android:id="@+id/img_heart2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/heart">

        </ImageView>
        <ImageView
            android:id="@+id/img_heart3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/heart">

        </ImageView>
        <TextView
            android:id="@+id/panel_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-250dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:text="0"
            android:textColor="#FFFF33"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_panel_top0"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_above="@id/middle_panel_top"

        android:background="@drawable/road"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_obstacle00"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/obstacle">

        </ImageView>

        <ImageView
            android:id="@+id/img_obstacle01"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/obstacle"></ImageView>

        <ImageView
            android:id="@+id/img_obstacle02"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/obstacle"></ImageView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/middle_panel_top"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_above="@id/middle_panel_middle"

        android:background="@drawable/road"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_obstacle10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/obstacle">

        </ImageView>

        <ImageView
            android:id="@+id/img_obstacle11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/obstacle"></ImageView>

        <ImageView
            android:id="@+id/img_obstacle12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/obstacle"></ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_panel_middle"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_above="@id/middle_panel_bottom"
        android:layout_centerInParent="true"
        android:background="@drawable/road"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_obstacle20"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/obstacle"></ImageView>

        <ImageView
            android:id="@+id/img_obstacle21"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/obstacle"></ImageView>

        <ImageView
            android:id="@+id/img_obstacle22"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/obstacle"></ImageView>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/middle_panel_bottom"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_above="@id/panel_bottom"
        android:background="@drawable/road"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_taxi"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/taxi"></ImageView>

        <ImageView
            android:id="@+id/img_obstacle31"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-110dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/obstacle"></ImageView>

        <ImageView
            android:id="@+id/img_boom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-78dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/boomm"></ImageView>

        <ImageView
            android:id="@+id/img_taxi2"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/taxi"></ImageView>

        <ImageView
            android:id="@+id/img_obstacle32"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-103dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/obstacle"></ImageView>

        <ImageView
            android:id="@+id/img_boom2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-78dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/boomm"></ImageView>

        <ImageView
            android:id="@+id/img_taxi3"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="-390dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/taxi"></ImageView>

        <ImageView
            android:id="@+id/img_obstacle30"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-110dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/obstacle"></ImageView>

        <ImageView
            android:id="@+id/img_boom3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="-78dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/boomm"></ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottomroad"
        android:orientation="horizontal">


        <Button
            android:id="@+id/panel_BTN_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/left" />


        <Button
            android:id="@+id/panel_BTN_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/right" />


    </LinearLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:rotation="@integer/material_motion_duration_long_2"
        android:src="@drawable/logo"></ImageView>
</RelativeLayout>