<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splash_background"
    tools:context=".activities.SplashActivity">





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"    />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:rotation="@integer/material_motion_duration_long_2"

        app:srcCompat="@drawable/img_logo" />




    <ImageView
        android:id="@+id/splash_IMG_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="330dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/img_taxi_splash"
        />

    <ImageView
        android:id="@+id/splash_IMG_smashed_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp"
        android:src="@drawable/img_smashed_screen" />


</RelativeLayout>