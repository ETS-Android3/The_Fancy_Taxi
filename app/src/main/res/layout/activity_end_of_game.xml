<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EndOfGameActivity"
    android:background="@drawable/img_game_over_background"
    >


    <ImageView
        android:id="@+id/eog_IMG_game_over_icon"
        android:layout_width="330dp"
        android:layout_height="190dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/img_game_over_logo">

    </ImageView>

    <ImageView
        android:id="@+id/eog_IMG_game_over_background0"
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/img_buttons_background">

    </ImageView>

    <TextView
        android:id="@+id/eog_IMG_game_over_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="260dp"
        android:text="xxxxxx"
        android:textColor="#CCCC00"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/eog_IMG_game_over_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="290dp"
        android:text="please enter your name below"
        android:textColor="#CCCC00"
        android:textSize="20sp" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:id="@+id/eog_EDT_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@id/eog_IMG_game_over_background0"
        android:padding="16dp"
        >


    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="30"
            android:imeOptions="actionDone" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/eog_BTN_refresh"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eog_EDT_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"

        android:text="Done"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        app:strokeColor="#FFFFFF" />



</RelativeLayout>