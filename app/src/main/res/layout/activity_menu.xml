<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuActivity"
    android:background="@drawable/img_menu_background"

    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu_LBL_pref_title"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="50dp"
        android:text="Preferences"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/menu_background0"
        android:layout_width="330dp"
        android:layout_height="190dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/img_buttons_background">

    </ImageView>

    <ImageView
        android:id="@+id/menu_background1"
        android:layout_width="230dp"
        android:layout_height="190dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/img_buttons_background">

    </ImageView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/menu_LBL_mode_title"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="150dp"
        android:text="Game mode"
        android:textSize="15sp"
        android:textColor="	#FFFFFF" />

    <Switch
        android:id="@+id/menu_switch_sensor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="280dp"
        android:text="Sensors Mode"
        android:checked="false"
        android:textColor="#CCCC00" />

    <RadioGroup
        android:id="@+id/radioModeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/menu_radioButton_hard_mode"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="170dp"
            android:text="HARD"
            android:textColor="#CCCC00" />

        <RadioButton
            android:id="@+id/menu_radioButton_easy_mode"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-60dp"
            android:text="EASY"

            android:textColor="#CCCC00" />

    </RadioGroup>

</RelativeLayout>
